{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "settings": {
    "import/resolver": {
        "node": {
            "extensions": [
                ".ts",
                ".js",
                ".json",
                ".tsx"
            ]
        }
    },
    "import/extensions": [
        ".js",
        ".ts",
        ".tsx"
    ]
  },
  "rules": {
    "import/extensions": [
        "error",
        "ignorePackages",
        {
            "js": "never",
            "ts": "never",
            "tsx": "never"
        }
    ],
    "linebreak-style": "off",
    "max-len": ["error", { "code": 120 }],
    "no-underscore-dangle": ["error", { "allow": ["_id"]}]
  }
  }